<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-primary: #2563eb; --color-primary-dark: #1d4ed8; --color-primary-light: #dbeafe;
            --color-text-strong: #111827; --color-text-base: #374151; --color-text-subtle: #6b7280;
            --color-text-on-primary: #ffffff; --color-bg-page: #f9fafb; --color-bg-content: #ffffff;
            --color-border: #e5e7eb; --font-family-main: 'Inter', sans-serif;
            --border-radius: 0.75rem; --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        }
    </style>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
    <div class="app-shell">
        <aside class="sidebar-area">
            <%- include('../partials/sidebar') %>
        </aside>

        <div class="main-wrapper">
            <header class="navbar-area">
                <%- include('../partials/navbar') %>
            </header>

            <main class="main-content-area">
                <% if (profileData) { %>
                    <div class="profile-container">
                        <div class="profile-header">
                            <div class="profile-header-info">
                                <h1><%= profileData.fullName %></h1>
                                <p class="profile-email"><%= currentUser.email %></p>
                            </div>
                            <div class="profile-header-actions">
                                <a href="/profile/form" class="btn-edit-profile">Edit Profile</a>
                            </div>
                        </div>

                        <% if (profileData.summary && profileData.summary.trim() !== '') { %>
                            <div class="profile-card">
                                <h2>Summary</h2>
                                <p class="summary-text"><%= profileData.summary %></p>
                            </div>
                        <% } %>

                        <div class="profile-card">
                            <h2>Skills</h2>
                            <% if (profileData.skills && profileData.skills.length > 0) { %>
                                <div class="skills-tags-container">
                                    <% profileData.skills.forEach(skillId => { %>
                                        <% const skillObj = locals.skillsList && locals.skillsList.find(s => s.id === skillId); %>
                                        <span class="skill-tag"><%= skillObj ? skillObj.text : skillId %></span>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <p class="no-data-message">No skills listed.</p>
                            <% } %>
                        </div>

                        <div class="profile-card">
                            <h2>Category Experience</h2>
                            <% if (profileData.categoryExperience && profileData.categoryExperience.length > 0) { %>
                                <ul class="experience-list">
                                    <% profileData.categoryExperience.forEach(exp => { %>
                                        <% const catObj = locals.broaderCategoriesList && broaderCategoriesList.find(c => c.id === exp.category_id); %>
                                        <li>
                                            <span class="item-title"><%= catObj ? catObj.text : exp.category_id %></span>
                                            <span class="item-meta"><%= exp.years %> years</span>
                                        </li>
                                    <% }); %>
                                </ul>
                            <% } else { %>
                                <p class="no-data-message">No category experience listed.</p>
                            <% } %>
                        </div>

                        <div class="profile-card">
                            <h2>Education & Preferences</h2>
                            <ul class="profile-details-list">
                                <li>
                                    <span class="detail-label">Degree Level</span>
                                    <% const degree = locals.degreeLevelsList && degreeLevelsList.find(d => d.id === profileData.degreeLevel); %>
                                    <span class="detail-value"><%= degree ? degree.text : (profileData.degreeLevel || 'N/A') %></span>
                                </li>
                                <li>
                                    <span class="detail-label">Field of Study</span>
                                    <% const field = locals.fieldsOfStudyList && fieldsOfStudyList.find(f => f.id === profileData.fieldOfStudy); %>
                                    <span class="detail-value"><%= field ? field.text : (profileData.fieldOfStudy || 'N/A') %></span>
                                </li>
                                <li>
                                    <span class="detail-label">Desired Job Types</span>
                                    <div class="detail-value">
                                        <% if (profileData.desiredJobTypes && profileData.desiredJobTypes.length > 0) { %>
                                            <div class="preferences-tags-container">
                                                <% profileData.desiredJobTypes.forEach(typeId => { %>
                                                    <% const typeObj = locals.jobTypeList && jobTypeList.find(t => t.id === typeId); %>
                                                    <span class="detail-value"><%= typeObj ? typeObj.text : typeId %></span>
                                                <% }); %>
                                            </div>
                                        <% } else { %>
                                            <span class="no-data-message">Not specified.</span>
                                        <% } %>
                                    </div>
                                </li>
                                <li>
                                    <span class="detail-label">Preferred Locations</span>
                                    <div class="detail-value">
                                        <% if (profileData.preferredLocations && profileData.preferredLocations.length > 0) { %>
                                            <div class="preferences-tags-container">
                                                <% profileData.preferredLocations.forEach(locId => { %>
                                                    <% const locObj = locals.locationsList && locals.locationsList.find(l => l.id === locId); %>
                                                    <span class="detail-value"><%= locObj ? locObj.text : locId %></span>
                                                <% }); %>
                                            </div>
                                        <% } else { %>
                                            <span class="no-data-message">Not specified.</span>
                                        <% } %>
                                    </div>
                                </li>
                                <li>
                                    <span class="detail-label">Willing to Work Remotely</span>
                                    <span class="detail-value"><%= profileData.isWillingToRemote ? 'Yes' : 'No' %></span>
                                </li>
                            </ul>
                        </div>
                    </div>

                <% } else { %>
                    <div class="card no-profile-card">
                        <h2>Profile Not Found</h2>
                        <p>You haven't created your profile yet. Complete your profile to start matching with jobs!</p>
                        <a href="/profile/form" class="btn-create-profile">Create Profile</a>
                    </div>
                <% } %>
            </main>
        </div>
        <script src="/js/main.js"></script>
    </div>
</body>
</html>