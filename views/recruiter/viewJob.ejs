<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> at <%= job.companyName %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-primary: #2563eb; --color-primary-dark: #1d4ed8; --color-primary-light: #dbeafe;
            --color-text-strong: #111827; --color-text-base: #374151; --color-text-subtle: #6b7280;
            --color-text-on-primary: #ffffff; --color-bg-page: #f9fafb; --color-bg-content: #ffffff;
            --color-border: #e5e7eb; --font-family-main: 'Inter', sans-serif;
            --border-radius: 0.75rem; --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        }
    </style>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/job-details.css">
</head>
<body>
    <div class="app-shell">
        <aside class="sidebar-area">
            <%- include('../partials/sidebar') %>
        </aside>

        <div class="main-wrapper">
            <header class="navbar-area">
                <%- include('../partials/navbar') %>
            </header>

            <main class="main-content-area">
                <div class="job-details-container">
                    <div class="job-details-header card">
                        <div class="company-logo-placeholder">
                            <%= job.companyName ? job.companyName.charAt(0).toUpperCase() : 'C' %>
                        </div>
                        <div class="header-info">
                            <h1><%= job.jobTitle %></h1>
                            <p class="company-name"><%= job.companyName %></p>
                            <div class="meta-info">
                                <% const locObj = locals.locationsList && locals.locationsList.find(l => l.id === job.jobLocation); %>
                                <span>
                                    <svg class="meta-icon" viewBox="0 0 24 24"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                                    <%= locObj ? locObj.text : (job.jobLocation || 'N/A') %>
                                </span>
                                <% const jobTypeObj = locals.jobTypeList && jobTypeList.find(jt => jt.id === job.jobType); %>
                                <span>
                                     <svg class="meta-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="12" cy="12" r="10"></circle>
                                        <polyline points="12 6 12 12 16 14"></polyline>
                                    </svg>
                                    <%= jobTypeObj ? jobTypeObj.text : job.jobType %>
                                </span>
                            </div>
                        </div>
                        <div class="header-actions">
                            <% if (isAuthenticated && currentUser.role === 'seeker' && job.isActive) { %>
                                <% if (typeof hasApplied !== 'undefined' && hasApplied) { %>
                                    <button class="btn btn-applied" disabled>Applied</button>
                                <% } else { %>
                                    <form action="/applications/apply/<%= job._id %>" method="POST">
                                        <button type="submit" class="btn btn-primary">Apply Now</button>
                                    </form>
                                <% } %>
                            <% } else if (isOwner) { %>
                                <a href="/jobs/<%= job._id %>/edit" class="btn btn-edit">Edit Job</a>
                            <% } %>
                        </div>
                    </div>

                    <div class="job-details-body card">
                        <div class="job-details-grid">
                            <div class="job-details-main">
                                <h2>Job Description</h2>
                                <div class="description-content">
                                    <%- job.jobDescription.replace(/\n/g, '<br>') %>
                                </div>

                                <h2>Required Skills</h2>
                                <% if (job.requiredSkills && job.requiredSkills.length > 0) { %>
                                    <div class="skills-tags-container">
                                        <% job.requiredSkills.forEach(skillId => { %>
                                            <% const skillObj = locals.skillsList && locals.skillsList.find(s => s.id === skillId); %>
                                            <span class="skill-tag"><%= skillObj ? skillObj.text : skillId %></span>
                                        <% }); %>
                                    </div>
                                <% } else { %>
                                    <p class="no-data-message">No specific required skills listed.</p>
                                <% } %>

                                <% if (job.preferredSkills && job.preferredSkills.length > 0) { %>
                                    <h2 style="margin-top: 30px;">Preferred Skills</h2>
                                    <div class="skills-tags-container">
                                        <% job.preferredSkills.forEach(skillId => { %>
                                            <% const skillObj = locals.skillsList && locals.skillsList.find(s => s.id === skillId); %>
                                            <span class="skill-tag preferred"><%= skillObj ? skillObj.text : skillId %></span>
                                        <% }); %>
                                    </div>
                                <% } %>
                            </div>

                            <div class="job-details-sidebar">
                                <h3>Job Overview</h3>
                                <ul class="overview-list">
                                    <li>
                                        <span class="overview-label">Career Level</span>
                                        <% const careerLevelObj = locals.careerLevelsList && careerLevelsList.find(cl => cl.id === job.careerLevel); %>
                                        <span class="overview-value"><%= careerLevelObj ? careerLevelObj.text : job.careerLevel %></span>
                                    </li>
                                    <li>
                                        <span class="overview-label">Minimum Degree</span>
                                        <% const degreeObj = locals.degreeLevelsList && degreeLevelsList.find(d => d.id === job.minimumDegreeLevel); %>
                                        <span class="overview-value"><%= degreeObj ? degreeObj.text : job.minimumDegreeLevel %></span>
                                    </li>
                                    <% if (job.preferredFieldOfStudy) { %>
                                        <li>
                                            <span class="overview-label">Preferred Field</span>
                                            <% const fieldObj = locals.fieldsOfStudyList && fieldsOfStudyList.find(f => f.id === job.preferredFieldOfStudy); %>
                                            <span class="overview-value"><%= fieldObj ? fieldObj.text : job.preferredFieldOfStudy %></span>
                                        </li>
                                    <% } %>
                                    <li>
                                        <span class="overview-label">Remote Option</span>
                                        <span class="overview-value"><%= job.allowsRemote ? 'Yes' : 'No' %></span>
                                    </li>
                                    <% if (job.salaryRange) { %>
                                        <li>
                                            <span class="overview-label">Salary Range</span>
                                            <span class="overview-value"><%= job.salaryRange %></span>
                                        </li>
                                    <% } %>
                                    <li>
                                        <span class="overview-label">Posted On</span>
                                        <span class="overview-value"><%= new Date(job.postedDate).toLocaleDateString() %></span>
                                    </li>
                                </ul>

                                <% if (job.experienceRequirements && job.experienceRequirements.length > 0) { %>
                                    <h3>Experience Needed</h3>
                                    <ul class="overview-list">
                                        <% job.experienceRequirements.forEach(expReq => { %>
                                            <% const catObj = locals.broaderCategoriesList && broaderCategoriesList.find(c => c.id === expReq.category_id); %>
                                            <li>
                                                <span class="overview-label"><%= catObj ? catObj.text : expReq.category_id %></span>
                                                <span class="overview-value"><%= expReq.minYears %>+ years</span>
                                            </li>
                                        <% }); %>
                                    </ul>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <script src="/js/main.js"></script>
    </div>
</body>
</html>