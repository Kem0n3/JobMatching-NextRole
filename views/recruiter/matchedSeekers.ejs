<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --color-primary: #2563eb; --color-primary-dark: #1d4ed8; --color-primary-light: #dbeafe;
            --color-text-strong: #111827; --color-text-base: #374151; --color-text-subtle: #6b7280;
            --color-text-on-primary: #ffffff; --color-bg-page: #f9fafb; --color-bg-content: #ffffff;
            --color-border: #e5e7eb; --font-family-main: 'Inter', sans-serif;
            --border-radius: 0.75rem; --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        }
    </style>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/matched-seekers.css">
</head>
<body>
    <div class="app-shell">
        <aside class="sidebar-area">
            <%- include('../partials/sidebar') %>
        </aside>

        <div class="main-wrapper">
            <header class="navbar-area">
                <%- include('../partials/navbar') %>
            </header>

            <main class="main-content-area">
                <div class="page-header">
                    <h1>Matched Candidates</h1>
                    <p>Showing top candidates for your job posting: <strong><%= job.jobTitle %></strong></p>
                </div>

                <% if (seekers && seekers.length > 0) { %>
                    <p class="results-count">Found <%= seekers.length %> candidate(s) above the match threshold.</p>
                    <div class="seekers-grid-container">
                        <% seekers.forEach(function(seeker) { %>
                            <div class="seeker-card">
                                <div class="seeker-card__header">
                                    <div class="seeker-card__avatar">
                                        <%= seeker.fullName ? seeker.fullName.charAt(0).toUpperCase() : 'S' %>
                                    </div>
                                    <div class="seeker-card__info">
                                        <h3 class="seeker-card__name"><%= seeker.fullName %></h3>
                                        <% const degree = locals.degreeLevelsList && degreeLevelsList.find(d => d.id === seeker.degreeLevel); %>
                                        <% const field = locals.fieldsOfStudyList && fieldsOfStudyList.find(f => f.id === seeker.fieldOfStudy); %>
                                        <p class="seeker-card__education">
                                            <%= degree ? degree.text : (seeker.degreeLevel || 'N/A') %>
                                            <% if (field && field.id !== 'notapplicable') { %> - <%= field.text %><% } %>
                                        </p>
                                    </div>
                                    <div class="seeker-card__match" title="Match Score">
                                        <%= (seeker.matchScore * 100).toFixed(0) %>%
                                    </div>
                                </div>
                                <div class="seeker-card__skills">
                                    <h4 class="seeker-card__skills-title">Top Skills</h4>
                                    <% if (seeker.skills && seeker.skills.length > 0) { %>
                                        <% seeker.skills.slice(0, 5).forEach(skillId => { %>
                                            <% const skillObj = locals.skillsList && locals.skillsList.find(s => s.id === skillId); %>
                                            <span class="seeker-card__skill-tag"><%= skillObj ? skillObj.text : skillId %></span>
                                        <% }); %>
                                        <% if (seeker.skills.length > 5) { %> <span class="seeker-card__skill-tag">...</span> <% } %>
                                    <% } else { %>
                                        <p style="font-size: 0.85rem; color: var(--color-text-subtle);">No skills listed.</p>
                                    <% } %>
                                </div>
                                <div class="seeker-card__footer">
                                    <a href="#" class="btn btn-secondary">View Full Profile</a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="no-results-card card">
                        <p>No candidates found matching this job's criteria.</p>
                    </div>
                <% } %>
            </main>
        </div>
        <script src="/js/main.js"></script>
    </div>
</body>
</html>