<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <style>
        :root {
            --color-primary: #2563eb; --color-primary-dark: #1d4ed8; --color-primary-light: #dbeafe;
            --color-text-strong: #111827; --color-text-base: #374151; --color-text-subtle: #6b7280;
            --color-text-on-primary: #ffffff; --color-bg-page: #f9fafb; --color-bg-content: #ffffff;
            --color-border: #e5e7eb; --font-family-main: 'Inter', sans-serif;
            --border-radius: 0.75rem; --shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        }
    </style>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/sidebar.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/job-listings.css">
</head>
<body>
    <div class="app-shell">
        <aside class="sidebar-area">
            <%- include('../partials/sidebar') %>
        </aside>

        <div class="main-wrapper">
            <header class="navbar-area">
                <%- include('../partials/navbar') %>
            </header>

            <main class="main-content-area">
                <div class="page-header">
                    <h1>Browse Jobs</h1>
                    <p>Filter and search for your next role from all available job postings.</p>
                </div>

                <div class="filter-form-container">
                    <form method="GET" action="/browse/jobs">
                        <div class="filter-grid">
                            <div class="filter-group">
                                <label for="jobLocation">Location</label>
                                <select id="jobLocation" name="jobLocation" class="select2-single">
                                    <option value="">All Locations</option>
                                    <% if (typeof locationsList !== 'undefined') { %>
                                        <% locationsList.forEach(function(loc) { %>
                                            <option value="<%= loc.id %>" <%= (currentFilters.jobLocation === loc.id) ? 'selected' : '' %>><%= loc.text %></option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="filter-group">
                                <label for="jobType">Job Type</label>
                                <select id="jobType" name="jobType" class="select2-single">
                                    <option value="">All Types</option>
                                     <% if (typeof jobTypeList !== 'undefined') { %>
                                        <% jobTypeList.forEach(function(type) { %>
                                            <option value="<%= type.id %>" <%= (currentFilters.jobType === type.id) ? 'selected' : '' %>><%= type.text %></option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="filter-group">
                                <label for="careerLevel">Career Level</label>
                                <select id="careerLevel" name="careerLevel" class="select2-single">
                                    <option value="">All Levels</option>
                                    <% if (typeof careerLevelsList !== 'undefined') { %>
                                        <% careerLevelsList.forEach(function(level) { %>
                                            <option value="<%= level.id %>" <%= (currentFilters.careerLevel === level.id) ? 'selected' : '' %>><%= level.text %></option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="filter-group">
                                <label for="skills">Required Skills</label>
                                <select id="skills" name="skills" multiple="multiple" class="select2-multiple">
                                    <% if (typeof skillsList !== 'undefined') { %>
                                        <% skillsList.forEach(function(skill) { %>
                                            <option value="<%= skill.id %>"
                                                <%= (currentFilters.skills && ( (Array.isArray(currentFilters.skills) && currentFilters.skills.includes(skill.id)) || currentFilters.skills === skill.id ) ) ? 'selected' : '' %>>
                                                <%= skill.text %>
                                            </option>
                                        <% }); %>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="filter-buttons">
                            <button type="submit" class="btn btn-primary">Apply Filters</button>
                            <a href="/browse/jobs" class="btn btn-secondary">Clear Filters</a>
                        </div>
                    </form>
                </div>

                <div class="job-listings-container">
                    <% if (jobs && jobs.length > 0) { %>
                        <p class="results-count">Showing <%= jobs.length %> job(s).</p>
                        <% jobs.forEach(function(job) { %>
                            <div class="job-card">
                                <div class="job-card__header">
                                    <div class="job-card__logo"><%= job.companyName ? job.companyName.charAt(0).toUpperCase() : 'C' %></div>
                                    <div class="job-card__info">
                                        <a href="/jobs/<%= job._id %>" class="job-card__title"><%= job.jobTitle %></a>
                                        <p class="job-card__company"><%= job.companyName %></p>
                                    </div>
                                </div>
                                <div class="job-card__meta">
                                    <div class="job-card__meta-item">
                                        <svg viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M9.69 18.933l.003.001C9.89 19.02 10 19 10 19s.11.02.308-.066l.002-.001.006-.003.018-.008a5.741 5.741 0 00.281-.14c.186-.096.446-.24.757-.433.62-.384 1.445-.976 2.343-1.8a18.847 18.847 0 002.535-3.417c.529-1.04.832-2.14.832-3.267 0-3.338-2.59-6.033-5.833-6.033s-5.833 2.695-5.833 6.033c0 1.127.303 2.227.832 3.267a18.847 18.847 0 002.535 3.417 19.083 19.083 0 002.343 1.8c.311.193.571.337.757.433.097.05.19.095.281.14l.018.008.006.003zM10 11.25a2.25 2.25 0 100-4.5 2.25 2.25 0 000 4.5z" clip-rule="evenodd" /></svg>
                                        <% const locObj = locals.locationsList && locals.locationsList.find(l => l.id === job.jobLocation); %>
                                        <span><%= locObj ? locObj.text : (job.jobLocation || 'N/A') %></span>
                                    </div>
                                    <div class="job-card__meta-item">
                                        <% const jobTypeObj = locals.jobTypeList && jobTypeList.find(jt => jt.id === job.jobType); %>
                                        <span><%= jobTypeObj ? jobTypeObj.text : job.jobType %></span>
                                    </div>
                                </div>
                                <div class="job-card__skills">
                                    <% if (job.requiredSkills && job.requiredSkills.length > 0) { %>
                                        <% job.requiredSkills.slice(0, 4).forEach(skillId => { %>
                                            <% const skillObj = locals.skillsList && locals.skillsList.find(s => s.id === skillId); %>
                                            <span class="job-card__skill-tag"><%= skillObj ? skillObj.text : skillId %></span>
                                        <% }); %>
                                        <% if (job.requiredSkills.length > 4) { %> <span class="job-card__skill-tag">...</span> <% } %>
                                    <% } %>
                                </div>
                                <div class="job-card__footer">
                                    <a href="/jobs/<%= job._id %>" class="btn btn-secondary">View Details</a>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="no-results-card card">
                            <p>No jobs found matching your criteria. Try adjusting or clearing your filters.</p>
                        </div>
                    <% } %>
                </div>
            </main>
        </div>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
        <script src="/js/main.js"></script>
        <script>
            $(document).ready(function() {
                $('.select2-single').each(function() {
                    $(this).select2({
                        placeholder: $(this).find('option[value=""]').text() || "Select an option",
                        allowClear: true,
                        width: '100%'
                    });
                });
                $('.select2-multiple').select2({
                    placeholder: "Select skills",
                    allowClear: true,
                    width: '100%'
                });
            });
        </script>
    </div>
</body>
</html>